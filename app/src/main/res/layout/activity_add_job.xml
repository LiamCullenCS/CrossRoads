<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kitkat.crossroads.AddJobActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Job"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="163dp" />

    <EditText
        android:id="@+id/editTextJobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Job Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="84dp" />

    <EditText
        android:id="@+id/editTextJobDescription"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Job Description"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/editTextJobName"
        tools:layout_editor_absoluteX="84dp" />

    <EditText
        android:id="@+id/editTextJobFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Job From"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextJobDescription"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/editTextJobTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Job To"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextJobFrom"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:id="@+id/buttonAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Job"
        app:layout_constraintTop_toBottomOf="@+id/editTextJobTo"
        tools:layout_editor_absoluteX="148dp" />
</android.support.constraint.ConstraintLayout>
