<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="80dp">

        <requestFocus />>

        <!--<ImageView-->
        <!--android:id="@+id/imageViewCBlack"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:src="@drawable/cblack" />-->

        <!--<ImageView-->
        <!--android:id="@+id/imageViewCRGreen"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_below="@+id/imageViewCBlack"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:src="@drawable/crgreentext" />-->

        <TextView
            android:id="@+id/textViewCreateProfileHeader"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/bebasneueregular"
            android:text="@string/create_your_profile"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewCreateProfileHeader"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/full_name"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />


        <EditText
            android:id="@+id/editTextPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextFullName"
            android:layout_centerInParent="true"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/phone_number"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/editTextAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextPasswordLogin"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Address Line 1"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/editTextAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextAddress1"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Address Line 2"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/editTextTown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextAddress2"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Town"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/editTextPostCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextTown"
            android:layout_centerInParent="true"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Postcode"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#808080" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editTextPostCode"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/checkBoxAdvertiser"
            android:text="What Are You Primarily Going To Be Using The App For?"
            android:textColor="#808080"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/checkBoxAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editTextPostCode"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:textColor="#2bbc9b"
            android:buttonTint="#2bbc9b"
            android:ems="10"
            android:padding="10dp"

            android:text="Advertiser"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkBoxCourier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/checkBoxAdvertiser"
            android:layout_below="@+id/checkBoxAdvertiser"
            android:layout_marginEnd="15dp"
            android:textColor="#2bbc9b"
            android:buttonTint="#2bbc9b"
            android:padding="10dp"
            android:text="Courier"
            android:layout_marginBottom="20dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonUploadImage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxCourier"
            android:layout_toStartOf="@+id/checkBoxCourier"
            android:background="#2bbc9b"
            android:text="Upload Profile Image" />

        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonUploadImage"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/buttonUploadImage"
            android:background="#2bbc9b"
            android:text="Save Profile" />

    </RelativeLayout>

</ScrollView>