<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewJobName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Job Name" />

        <TextView
            android:id="@+id/textViewJobName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewJobDesc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Job Description" />

        <TextView
            android:id="@+id/textViewJobDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewJobFrom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Job From" />

        <TextView
            android:id="@+id/textViewJobFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewJobTo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Job To" />

        <TextView
            android:id="@+id/textViewJobTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bid"
            android:inputType="textPersonName" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bid" />

    </LinearLayout>




</LinearLayout>

