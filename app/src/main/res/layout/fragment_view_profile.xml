<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kitkat.crossroads.Profile.ViewProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gradientLayout"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@drawable/gradient_background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/Profile_Photo_of_user" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@string/Person_Name_Here" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gradientLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/UserRatingsBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:paddingTop="10dp"
                        android:stepSize=".5" />

                    <LinearLayout
                        android:id="@+id/adL1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserRatingsBar"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/customborder"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/phone"
                            android:layout_marginTop="-26dp"/>

                        <TextView
                            android:id="@+id/HeadingForPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/UserRatingsBar"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/bebasneueregular"
                            android:text="Phone Number"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textViewPhoneNumber"
                            android:fontFamily="@font/applegaramond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/HeadingForPhoneNumber"
                            android:paddingTop="10dp"
                            android:text="viewPhoneNumber"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adL2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adL1"
                        android:background="@drawable/customborder"
                        android:gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/home"
                            android:layout_marginTop="-26dp"/>

                        <TextView
                            android:id="@+id/HeadingForAddressOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/adL1"
                            android:fontFamily="@font/bebasneueregular"
                            android:text="Address Line One"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textViewAddressOne"
                            android:fontFamily="@font/applegaramond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/HeadingForAddressOne"
                            android:paddingTop="10dp"
                            android:text="viewAddressOne"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/HeadingForAddressTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewAddressOne"
                            android:fontFamily="@font/bebasneueregular"
                            android:paddingTop="10dp"
                            android:text="Address Line Two"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textViewAddressTwo"
                            android:fontFamily="@font/applegaramond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/HeadingForAddressTwo"
                            android:paddingTop="10dp"
                            android:text="viewAddressTwo"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/HeadingForTown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textViewAddressTwo"
                            android:fontFamily="@font/bebasneueregular"
                            android:paddingTop="10dp"
                            android:text="Town"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textViewTown"
                            android:fontFamily="@font/applegaramond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/HeadingForTown"
                            android:paddingTop="10dp"
                            android:text="viewTown"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/HeadingForPostCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewTown"
                            android:fontFamily="@font/bebasneueregular"
                            android:paddingTop="10dp"
                            android:text="Post Code"
                            android:textAlignment="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textViewPostCode"
                            android:fontFamily="@font/applegaramond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/HeadingForPostCode"
                            android:paddingTop="10dp"
                            android:text="viewPostCode"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adL3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adL2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/customborder"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewCheckbox"
                            android:fontFamily="@font/bebasneueregular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|fill_horizontal|center"
                            android:text="What Are You Primarily Going To Be Using The App For?"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBoxAdvertiser"
                                android:fontFamily="@font/applegaramond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:buttonTint="#2bbc9b"
                                android:clickable="false"
                                android:ems="10"
                                android:padding="10dp"
                                android:text="Advertiser"
                                android:textColor="#2bbc9b"
                                android:visibility="visible" />

                            <CheckBox
                                android:id="@+id/checkBoxCourier"
                                android:fontFamily="@font/applegaramond"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="#2bbc9b"
                                android:clickable="false"
                                android:text="Courier"
                                android:textColor="#2bbc9b"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>


