<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kitkat.crossroads.Jobs.JobBidsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewJobInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneueregular"
                    android:paddingTop="10dp"
                    android:text="Job Information"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    tools:layout_editor_absoluteX="163dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="14dp"
                        android:src="@drawable/selfie" />

                    <TextView
                        android:id="@+id/textViewJobName1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/imageView"
                        android:layout_marginStart="29dp"
                        android:layout_marginTop="21dp"
                        android:layout_toEndOf="@+id/imageView"
                        android:text="JobName Here"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewJobDescription1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/textViewJobName1"
                        android:layout_below="@+id/textViewJobName1"
                        android:layout_marginTop="16dp"
                        android:text="JobDescription Here"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewAcceptedBid"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/textViewJobDescription1"
                        android:layout_below="@+id/textViewJobDescription1"
                        android:layout_marginTop="19dp"
                        android:text="Users Bid"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <ExpandableListView
                    android:id="@+id/expandable_list_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:dividerHeight="3dp"
                    android:pointerIcon="arrow"></ExpandableListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <ExpandableListView
                    android:id="@+id/expandable_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:dividerHeight="3dp"
                    android:pointerIcon="arrow"></ExpandableListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <ExpandableListView
                    android:id="@+id/expandable_list_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:dividerHeight="3dp"
                    android:pointerIcon="arrow">

                </ExpandableListView>


            </LinearLayout>

            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <!--<EditText-->
                    <!--android:id="@+id/editBid"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginEnd="49dp"-->
                    <!--android:layout_toStartOf="@+id/buttonEditBid"-->
                    <!--android:hint="Your Bid"-->
                    <!--android:textSize="18sp" />-->

                <!--<Button-->
                    <!--android:id="@+id/buttonEditBid"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_alignTop="@+id/editBid"-->
                    <!--android:layout_marginEnd="71dp"-->
                    <!--android:text="Submit Bid" />-->

            <!--</RelativeLayout>-->
        </LinearLayout>
    </ScrollView>
</FrameLayout>