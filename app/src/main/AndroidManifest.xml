<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kitkat.crossroads">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/crossroadslogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Account.RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Account.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize"
            />
        <activity
            android:name=".Profile.CreateProfileActivity" />
        <activity android:name=".Jobs.AddJobActivity" />
        <activity android:name=".Jobs.JobsActivity" />
        <activity android:name=".Account.ResetPasswordActivity" />
        <activity
            android:name=".CrossRoads"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".Jobs.JobDetailsActivity"></activity>
        <activity android:name=".TermsAndConditions"
            android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>
